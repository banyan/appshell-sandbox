{
  "name": "ts-app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3",
    "html-critical-webpack-plugin": "git+https://github.com/banyan/html-critical-webpack-plugin#critical-1.0.0",
    "name-all-modules-plugin": "^1.0.1",
    "preload-webpack-plugin": "^2.0.0",
    "raf": "^3.4.0",
    "script-ext-html-webpack-plugin": "^1.8.8",
    "webpack-bundle-analyzer": "^2.9.1"
  },
  "dependencies": {
    "autoprefixer": "7.1.2",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "firebase-http2-push-config": "^0.0.8",
    "firebase-tools": "^3.15.3",
    "fs-extra": "3.0.1",
    "global": "^4.3.2",
    "html-webpack-plugin": "2.29.0",
    "http2-push-manifest": "^1.0.1",
    "jest": "20.0.4",
    "moment": "^2.19.3",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "promise": "8.0.1",
    "react": "^16.1.1",
    "react-async-component": "^1.0.2",
    "react-dev-utils": "^4.0.1",
    "react-dom": "^16.1.1",
    "react-router-dom": "^4.2.2",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "^20.0.7",
    "ts-loader": "^2.3.7",
    "tslint": "^5.7.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.2.0",
    "typescript": "~2.5.3",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.7.1",
    "webpack-manifest-plugin": "1.2.1",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js && http2-push-manifest -f build/index.html -m build/push_manifest.json && node scripts/push-manifest-to-firebase.js",
    "deploy": "firebase deploy --project appshell-sandbox-banyan",
    "test": "node scripts/test.js --env=jsdom",
    "analyze": "NODE_ENV=production webpack -p --config './config/webpack.config.analyze.js'"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/raf.js",
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
